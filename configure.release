#!/bin/bash
# a typical configuration for production usage...
mkdir -p build
cd build
cmake .. -DCMAKE_CXX_FLAGS="-W -Wall" \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE4_ENABLE_FINAL=YES \
    -DSTATIC_DRUMSTICK=YES \
    -DENABLE_PCH=NO $*
echo "You can run 'make' now"
